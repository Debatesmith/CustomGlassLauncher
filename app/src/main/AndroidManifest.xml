<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.glasslauncher">

    <!-- Glass Enterprise Edition 2 specific configurations -->
    <uses-feature
        android:name="com.google.android.glass.device"
        android:required="true" />

    <uses-permission android:name="com.google.android.glass.permission.DEVELOPMENT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Custom Glass Launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GlassLauncher"
        android:hardwareAccelerated="true">

        <meta-data
            android:name="com.google.android.glass.TouchEnabledApplication"
            android:value="true" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.GlassLauncher.NoActionBar"
            android:excludeFromRecents="true"
            android:clearTaskOnLaunch="true"
            android:label="Custom Glass Launcher"
            android:enabled="true">

            <meta-data
                android:name="com.google.android.glass.TouchEnabledActivity"
                android:value="true" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AppDrawerActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.GlassLauncher.NoActionBar"
            />
    </application>
</manifest>